{
  "name": "cfpb-design-system",
  "version": "1.0.0",
  "private": true,
  "description": "CFPB's UI framework",
  "keywords": [
    "design-system"
  ],
  "bugs": {
    "url": "https://github.com/cfpb/design-system/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/cfpb/design-system.git"
  },
  "license": "SEE LICENSE IN TERMS.md",
  "author": {
    "name": "Consumer Financial Protection Bureau",
    "email": "tech@cfpb.gov",
    "url": "https://cfpb.github.io/"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn run compile-js && yarn run compile-css && bundle exec jekyll build",
    "build-netlify": "yarn --cwd ../ && webpack && yarn run compile-css && bundle exec jekyll build",
    "changelog": "./scripts/generate-changelog.sh",
    "compile-css": "lessc --include-path=packages/:node_modules/normalize-css/normalize-css/ docs/assets/css/main.less docs/dist/css/main.css",
    "compile-js": "NODE_ENV=production webpack",
    "copy-icons": "cp -r packages/cfpb-icons/src/icons docs/assets/",
    "design-system-link": "lerna exec -- yarn link",
    "design-system-unlink": "lerna exec -- yarn unlink",
    "install": "yarn run copy-icons && bundle install",
    "process-icon-svgs": "svgo -o packages/cfpb-icons/src/cfpb-icons --enable=addClassesToSVGElement --enable=removeStyleElement --enable=removeAttrs --config='{ \"plugins\": [ { \"addClassesToSVGElement\": { \"className\": \"cf-icon-svg\" } }, { \"removeAttrs\": { \"attrs\": [ \"fill\", \"path:class\", \"circle:class\" ] } }, { \"cleanupIDs\": { \"force\": \"true\" } } ] }'",
    "release": "yarn run build && lerna publish",
    "start": "concurrently --kill-others \"yarn start-netlify\" \"bundle exec jekyll serve --watch --profile --host=localhost --port=4000\" \"yarn run watch\" \"yarn run watch-css\"",
    "start-netlify": "cd ../ && netlify-cms-proxy-server",
    "test": "gulp test",
    "test:browser": "wdio run test/browser/webdriver.conf.js",
    "test:browser:cloud": ": ${SAUCE_USERNAME?\"You need to define SAUCE_USERNAME and SAUCE_ACCESS_KEY env variables \"} && wdio run test/browser/webdriver-sauce.conf.js",
    "version": "yarn run changelog && git add CHANGELOG.md",
    "watch": "webpack --watch",
    "watch-css": "less-watch-compiler --less-args include-path=../packages/:../node_modules/normalize-css/normalize-css/ assets/css dist/css main.less"
  },
  "browserslist": "> 0.5%, last 2 versions, Firefox ESR, not dead, ie >= 11",
  "dependencies": {
    "anchor-js": "^4.2.2",
    "escape-html": "^1.0.3",
    "ftdomdelegate": "^3.0.0",
    "govuk-frontend": "^3.6.0",
    "html-entities": "1.3.1",
    "lunr": "^2.3.8",
    "marked": "1.0.0",
    "netlify-cms": "2.10.48",
    "normalize-css": "^2.3.1",
    "normalize-legacy-addon": "^0.1.0",
    "react": "16.13.1",
    "react-liquid": "1.3.0",
    "slugify": "1.4.0"
  },
  "devDependencies": {
    "@babel/core": "7.9.6",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "7.9.6",
    "@babel/plugin-syntax-export-extensions": "^7.0.0-beta.32",
    "@babel/preset-env": "7.9.6",
    "@babel/preset-react": "7.9.4",
    "@wdio/cli": "6.1.12",
    "@wdio/local-runner": "6.1.12",
    "@wdio/mocha-framework": "6.1.8",
    "@wdio/sauce-service": "6.1.13",
    "@wdio/spec-reporter": "6.1.12",
    "@wdio/sync": "6.1.8",
    "autoprefixer": "8.6.5",
    "babel-loader": "8.1.0",
    "chromedriver": "^83.0.0",
    "concurrently": "5.2.0",
    "fancy-log": "^1.3.2",
    "finalhandler": "^1.1.0",
    "gulp": "^4.0.2",
    "gulp-eslint": "6.0.0",
    "gulp-ignore": "3.0.0",
    "gulp-less": "^4.0.1",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "2.0.0",
    "gulp-stylelint": "13.0.0",
    "html-loader": "1.1.0",
    "jest": "26.0.1",
    "jest-cli": "26.0.1",
    "lerna": "3.20.2",
    "lerna-changelog": "1.0.1",
    "less-watch-compiler": "^1.14.1",
    "log-symbols": "4.0.0",
    "merge-stream": "2.0.0",
    "minimist": "1.2.5",
    "netlify-cms-proxy-server": "^1.2.6",
    "require-dir": "^1.2.0",
    "serve-static": "^1.13.1",
    "stylelint": "13.3.3",
    "stylelint-config-standard": "20.0.0",
    "svg-inline-loader": "0.8.2",
    "svgo": "1.3.2",
    "terser-webpack-plugin": "3.0.1",
    "through2": "^3.0.0",
    "vinyl-named": "^1.1.0",
    "wcag": "^0.3.0",
    "wdio-chromedriver-service": "6.0.3",
    "webpack": "4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-stream": "^5.0.0"
  }
}
